<link rel="stylesheet" href="assets/css/register.css">

<style>
.remove{
  text-decoration: none;
  color: inherit;
}
</style>
<body>
  <div class="user">
    <header class="user_header">
      <!--<img src="assets/img/tooth.svg"/>-->
      <h1 class="user_title dentglow"> <a class="remove" href="/home"> Dent Glow </a></h1>
      <h1 class="user_title"> Account Registration </h1>
    </header>

    <% if (message.length > 0) { %>
      <div class="error-message"><%= message %></div>
    <% } %>

    <form class="form" role="form" method="post" action="/register">
      <div class="form_group">
        <input class="form_input" for="user_name" name="user_name" type="text" placeholder="Username" required/>
      </div>
      <div class="form_group">
        <input class="form_input" for="password" name="password" type="password" placeholder="Password" required/>
      </div>
      <div class="form_group">
        <input class="form_input" for="email" name="email" type="email" placeholder="Email" required/>
      </div>
      <div class="form_group">
        <input class="form_input" for="first_name" name="first_name" type="text" placeholder="First Name" required/>
      </div>
      <div class="form_group">
        <input class="form_input" for="last_name" name="last_name" type="text" placeholder="Last Name" required/>
      </div>
      <div class="form_group">
        <input class="form_input" for="last_name" name="last_name" type="date" placeholder="Birthday" required/>
      </div>
      <div class="form_group">
        <input class="form_input" for="last_name" name="last_name" type="text" placeholder="Address" required/>
      </div>
      <div class="form_group">
        <input class="form_input" required pattern="[0-9]{10}" maxlength="10" placeholder="Phone Number" required/>
      </div>
      <button class="btn" type="submit">Register</button>

    </form>
  </div>
</body>
